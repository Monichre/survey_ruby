<h1>Survey Title: <%= @survey.name() %></h1>

<a href="/surveys/<%=@survey.id()%>/edit" class="btn btn-warning">Edit Survey Title</a>
<form class="" action="/surveys/<%= @survey.id() %>" method="post">
  <input name = "_method" type="hidden" value="delete">
  <button class = 'btn btn-danger' type="submit">Delete Survey</button>
</form>
<a href="/surveys/<%=@survey.id()%>/take" class="btn btn-success">Take This Survey!</a>

<h2>Questions:</h2>
<ul class="list-group">
  <% @survey.questions.each() do |question| %>
  <li class="list-group-item"><a href="/surveys/<%=@survey.id()%>/questions/<%= question.id() %>"><%= question.content() %></a>

    <form class="response-form" action="/surveys/<%= @survey.id() %>/questions/<%=question.id %>/delete" method="post">
      <input name = "_method" type="hidden" value="delete">
      <button class = 'btn btn-danger btn-sm' type="submit">Delete Question</button>
    </form>

  </li>
  <% end %>
</ul>

<p>Add questions:</p>

<form action="/surveys/<%=@survey.id%>/new_question" method="post">
  <label for="content">question:</label>
  <input type="text" name="content" id = "content">

  <button class = 'btn btn-default' type="submit">Add Question</button>
</form>

<a href="/" class="btn btn-default active" role="button">Home</a>
