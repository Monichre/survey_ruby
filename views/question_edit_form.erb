<form class="well" action="/surveys/<%= @survey.id() %>/questions/<%= @question.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="content">Edit Question Content </label>
    <input id = "content" type="text" name="content" value="<%=@question.content%>" class="form-control">
  </div>
  <button type="submit" class="btn btn-success">Update Question</button>
</form>

<a href="/" class="btn btn-default active" role="button">Home</a>
